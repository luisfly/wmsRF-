@{
    //ViewBag.Title = "补货";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string GrpTypeID = Request.QueryString["GrpTypeID"];
    switch (GrpTypeID)
    {
        case "1":
            ViewBag.Title = "零拣箱补";
            break;
        case "2":
            ViewBag.Title = "零补";
            break;
        default:
            Response.Redirect("/Menu");
            break;
    }
}
<input id="GrpTypeID" type="hidden" value="@GrpTypeID" />

<br />
<h3 style="color: #FF0000" id="labCaption">当前没有[补货]任务！</h3><a id="Timeing">10秒后自动刷新</a>
<div class="btn">
    <input  type="button" value="刷新(F8)" id="btnOK" onclick="Refresh()" />
    <input  type="button" value="补货上架(F9)" id="btnSubmitRep" onclick="SubmitRep()" />
</div>
<script type="text/javascript">
    $(document).ready(function () {
        if ($("#GrpTypeID").val() == "1") {
            $("#labCaption").text("当前没有[零拣箱补]任务！");
        }
        else
            if ($("#GrpTypeID").val() == "2") {
                $("#labCaption").text("当前没有[零补]任务！");
            }
            else {
                window.location.href = "/Menu";
            }
        $(document).keydown(function (e) {
            var elem = e.srcElement || e.target;
            if (e.which == 119)//F8
            {
                $("#btnOK").click();
            }
            if (e.which == 120)//F9
            {
                $("#btnSubmitRep").click();
            }
        });
        timedCount();
    });

    //跳转到补货界面
    function SubmitRep() {
        document.location.href = "/Replenish/RepInputTray";
    }

    function Refresh() {
        var GrpTypeID = $("#GrpTypeID").val();
        if (GrpTypeID == "1" || GrpTypeID == "2") {
            window.location.href = "/Replenish?GrpTypeID=" + GrpTypeID;
        }
        else {
            window.location.href = "/Menu";
        }
    }

    var c = 100
    var t
    function timedCount() {
        tm = (c / 100 * 10).toFixed(1);
        $("#Timeing").html(tm + "秒后自动刷新");
        c = c - 1;
        t = setTimeout("timedCount()", 100);
        if (c < 0) {
            clearTimeout(t);
            $("#btnOK").click();
        }
    }
</script>