@{
    //ViewBag.Title = "拣货";
    Layout = "~/Views/Shared/_Layout.cshtml";
    object TypeID = Request.QueryString["AssignTypeID"];
    string AssignTypeID = "";
    if (TypeID == null)
    {
        Response.Redirect("/Memu");
    }
    else
    {
        AssignTypeID = TypeID.ToString();
        switch (AssignTypeID)
        {
            case "0":
                ViewBag.Title = "拣货";//2017-03-14
                break;
            case "2":
                ViewBag.Title = "箱补/托拣";
                break;
            case "3":
                ViewBag.Title = "箱拣";
                break;
            case "4":
                ViewBag.Title = "零拣";
                break;
            default:
                Response.Redirect("/Memu");
                break;
        }
    }
}
<input id="AssignTypeID" type="hidden" value="@AssignTypeID" />

<br />
<h3 style="color: #FF0000" id="labCaption">当前没有[拣货]任务！</h3><a id="Timeing">10秒后自动刷新</a>
<div class="btn"><input type="button" value="刷新(F8)" id="btnOK" onclick="Refresh()" /></div>
<script type="text/javascript">
    $(document).ready(function () {
        if ($("#AssignTypeID").val() == "0") {
            $("#labCaption").text("当前没有[拣货]任务！");
        }
        else
            if ($("#AssignTypeID").val() == "2") {
                $("#labCaption").text("当前没有[箱补/托拣]任务！");
            }
            else
                if ($("#AssignTypeID").val() == "3") {
                    $("#labCaption").text("当前没有[箱拣]任务！");
                }
                else
                    if ($("#AssignTypeID").val() == "4") {
                        $("#labCaption").text("当前没有[零拣]任务！");
                    }
                    else {
                        window.location.href = "/Menu";
                    }

        $(document).keydown(function (e) {
            var elem = e.srcElement || e.target;
            if (e.which == 119)//F8
            {
                $("#btnOK").click();
            }
        });
        timedCount();
    });

    function Refresh() {
        var AssignTypeID = $("#AssignTypeID").val();
        if (AssignTypeID == "0" || AssignTypeID == "4" || AssignTypeID == "3" || AssignTypeID == "2") {
            window.location.href = "/PICK?AssignTypeID=" + AssignTypeID;
        }
        else {
            window.location.href = "/Menu";
        }
    }

    var c = 100
    var t
    function timedCount() {
        tm = (c / 100 * 10).toFixed(1);
        $("#Timeing").html(tm + "秒后自动刷新");
        c = c - 1;
        t = setTimeout("timedCount()", 100);
        if (c < 0) {
            clearTimeout(t);
            $("#btnOK").click();
        }
    }
</script>